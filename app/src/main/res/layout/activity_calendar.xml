<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cs.dawson.dawsonelectriccurrents.CalendarActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calendarbg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calendarActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textColor="#000000"
        android:text="@string/eventActivityTitle"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/eventTitleText"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="#000000"
            android:textStyle="bold"
            android:hint="@string/eventTitleHint"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:text="@string/datePickerText"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvDatePicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="@string/datePickerHint"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="#000000"
            android:text="@string/startTimePickerText"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvStartTimePicker"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="#000000"
            android:text="@string/startTimePickerHint"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/endTimePickerText"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvEndTimePicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/endTimePickerHint"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textColor="#000000"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blueicon"
            android:onClick="addEvent" />
    </LinearLayout>
</LinearLayout>
